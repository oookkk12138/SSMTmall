<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace="dao.ReviewDao">
    	<select id="getReviewByProductId" parameterType="int" resultMap="ReviewBean">
    		select review.id reviewid,content,createdate,productid,user.id userid,name from review join user on review.userid = user.id where review.productid = #{productId} order by createdate desc
    	</select>
    	<resultMap type="pojo.Review" id="ReviewBean" autoMapping="true">
    		<id column="reviewid" property="id"/>
  			<association property="user" javaType="pojo.User" autoMapping="true">
  				<id column="userid" property="id"/>
  			</association>
    	</resultMap>
    	<insert id="addReview" parameterType="pojo.Review">
    		insert into review values(null,#{content},#{createDate},#{userId},#{productId})
    	</insert>
    </mapper>